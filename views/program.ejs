<% include includes/header.ejs %>


<!-- View de listagem de programação -->

<main>
    
    <h2>Listagem de<strong> Programação</strong></h2>
    
    
    <div class='container'>
        
        <span class='headerContent'>
            <h3>TODAS AS PROGRAMAÇÕES</h3>

            <div>
            <a href="/singUp_program">Cadastrar</a>

                    <form action="" class='formInputSearch'>
                            <input type="text" placeholder="Pesquise" name='pesquisa'>
                            <button>
                                <i class="material-icons"> search </i>
                            </button>
                        </form>
            </div>


        </span>
        
        <div class='listProgram'>
            <% for(var i=0; i<programs.length; i++) {%>
                    <div class='listBox'>
                            <span>
                                <label>TÍTULO DA PROGRAMAÇÃO</label>
                                <p><%= programs[i].nome %></p>
                            </span>
                            <span>
                                <label>DATA DE TRANSMISSÃO</label>
                                <p><%= programs[i].dia_emissao.toLocaleDateString() %></p>
                            </span>
                            <span>
                                <label>HORÁRIO DE TRANSMISSÃO</label>
                                <p><%= programs[i].hora_inicio.getHours() %> : <%= programs[i].hora_inicio.getMinutes() %></p>
                            </span>
                            <span>
                                <label>HORÁRIO DE TRANSMISSÃO</label>
                                <p><%= programs[i].hora_fim.getHours() %> : <%= programs[i].hora_fim.getMinutes() %></p>
                            </span>
                            <span>
                                <label>FORMATO</label>
                                <p>MP4</p>
                            </span>
                            <span>
                                <label>ID</label>
                                <p><%= programs[i].id %> </p>
                            </span>
                            <span>
                                <label>ESTADO</label>
                                <p>Não Análisado</p>
                            </span>
                            <span class='buttonsList'>
                                <a href="profile_program/<%= programs[i].id %>">
                                    <img src="img/icon8.png" alt="">
                                    <div class='titleBox'>
                                        <span></span>
                                        <p>Visualizar</p>
                                    </div>
                                </a>
                                <a href="/analize/<%= programs[i].id %>">
                                    <img src="img/icon9.svg" alt="">
                                    <div class='titleBox'>
                                        <span></span>
                                        <p>Analisar</p>
                                    </div>
                                </a>
                            </span>
                        </div>
            <% } %>
           

           
        </div>
        
    </div>
    
    <legend id='DireitosReservados'>Sistema de Análise Audiovisual - <strong>SAAV</strong><br>Todos os direitos reservados</legend>
    
</main>



<% include includes/footer.ejs %>

